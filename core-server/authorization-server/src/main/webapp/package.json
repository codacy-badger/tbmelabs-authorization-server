    "build:server:prod": "ng run tbme-labs-authorization-server:server:production --delete-output-path --progress",
    "webpack:server": "webpack --config webpack.server.config.js --progress",
    "test": "ng test",
    "test:watch": "npm run test -- --watch",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "^6.0.3",
