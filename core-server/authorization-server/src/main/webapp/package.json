  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:browser:prod && npm run build:server:prod && npm run webpack:server",
    "build:dev": "npm run build:browser",
    "build:browser": "ng build",
    "build:browser:prod": "npm run build:browser -- --prod --deploy-url=/public/ --delete-output-path --progress",
