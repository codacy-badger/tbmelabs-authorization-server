<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
	<!-- Create appenders, configure log output -->
	<Appenders>
		<!-- Console output (level = 500) -->
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%-4d [%t] %-5p %c - %m%n" />
			<Filters>
				<ThresholdFilter level="debug" />
			</Filters>
		</Console>
	</Appenders>

	<!-- Create loggers, no further configuration -->
	<Loggers>
		<Root level="all">
			<AppenderRef ref="console" />
		</Root>

		<!-- Debug web requests -->
		<category name="org.springframework.security">
			<priority value="debug" />
		</category>

		<!-- Remove zuul "spam" (pings) from debug log -->
		<category
			name="org.apache.http.impl.conn.PoolingHttpClientConnectionManager">
			<priority value="warn" />
		</category>
	</Loggers>
</Configuration>